<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showCaseMessageViewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="36dp"
    android:paddingLeft="36dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    android:maxWidth="420dp"
    tools:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/imageViewShowCase"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:src="@drawable/rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:color/black"
        tools:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/layoutTexts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/imageViewShowCaseClose"
        app:layout_constraintStart_toEndOf="@+id/imageViewShowCase"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewShowCaseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textAppearance="@style/BoldFont"
            tools:visibility="visible"
            tools:text="Title"/>

        <TextView
            android:id="@+id/textViewShowCaseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewShowCaseTitle"
            android:layout_marginTop="2dp"
            android:breakStrategy="simple"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            android:textAppearance="@style/RegularFont"
            tools:visibility="visible"
            tools:text="Description"/>

        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/textViewShowCaseDescription"
            android:visibility="gone"
            app:piv_animationType="fill"
            app:piv_selectedColor="@color/color_primary"
            app:piv_unselectedColor="@color/color_primary"
            app:piv_strokeWidth="1dp"
            app:piv_radius="3dp"
            app:piv_padding="4dp"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/textViewShowCaseNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewShowCaseDescription"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:layout_marginTop="6dp"
            android:breakStrategy="simple"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="@string/label_next"
            android:visibility="gone"
            android:textAppearance="@style/BoldFont"
            tools:visibility="visible"
            tools:text="Next"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewShowCaseClose"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="11dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>